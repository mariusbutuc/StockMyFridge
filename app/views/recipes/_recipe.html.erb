<% total = 0 %>

<table>
	<thead>
		<tr>
			<th colspan="3">Grocery List</th>
		</tr>
	</thead>
	
	<tbody>
		<tr class="barTop">
			<td colspan="3">
				<%= image_tag 'bar-top.png' %>
			</td>
		</tr>
		
		<% @products.each do |product| %>
			<tr>
				<td class="checkbox"><%= image_tag 'checkbox.png' %></td>
				<td class="product"><%= product[:name] %></td>
				<td class="amount"><%= number_to_currency(product[:price]) %></td>
			</tr>
			
			<% total += product[:price] %>
		<% end %>
		
		<tr class="barBottom">
			<td colspan="3">
				<%= image_tag 'bar-bottom.png' %>
			</td>
		</tr>
		
		<tr>
			<th colspan="2">Total</th>
			<th class="amount"><%= number_to_currency(total) %></th>
		</tr>
	</tbody>
	
	<tfoot>
		<tr><td colspan="3"></td></tr>
	</tfoot>
</table>

